/* pages/personal/orderDetails/returnDetails/returnDetails.wxss */
.container {
  min-height: 100%;
  padding-bottom: 20rpx;
  height: auto;
}
.title-name-box {
  background: #fd5552;
  padding: 50rpx 60rpx;
}
.title-name-box .title {
  font-size: 36rpx;
  color: #fff;
  line-height: 60rpx;
}
.title-name-box  .completeDate {
  font-size: 28rpx;
  color: #fff;
}
.border-b {
  border-bottom: 2rpx solid #dfdfdf;
}
.list-des {
  background: #fff;
  margin-bottom: 20rpx;
}
.item-des {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.item-des text {
  font-size: 30rpx;
}
.item-des .right {
  margin-right: 20rpx;
}
.item-des .iconfont {
  color:#b0b0b0;
}
.item-des .mark {
  font-size: 32rpx;
  color: #fd5552;
}
.list-des .content-des {
  background: #f5f5f5;
  padding: 20rpx 40rpx;
  display: flex;
}
.list-des image {
  height: 150rpx;
  width: 150rpx;
}
.list-des .txt-des {
  flex: 1;
  margin-left: 20rpx;
}
.list-des .txt-des .title-des {
  font-size: 28rpx;
  line-height: 36rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  letter-spacing: 0;
  text-align: left;
  overflow: hidden;
}
.list-des .txt-des .sort-des {
  font-size: 24rpx;
  color:#999;
  line-height: 50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.des-details {
  background: #fff;
  padding: 40rpx 30rpx;
}
.des-details .item {
  display: flex;
  margin-bottom: 15rpx;
}
.des-details .item .t-text {
  width: 140rpx;
  font-size: 28rpx;
  color: #999;
}
.des-details .item .c-text {
  flex: 1;
  font-size: 28rpx;
  color: #979797;
}