/* pages/confirmOrder/confirmOrder.wxss */
page {
  background: #f2f2f2;
}
.container {
  height: auto;
  overflow: hidden;
  padding-bottom: 120rpx;
}
.confirmOrder-box {
  padding-top: 20rpx;
}
.confirmOrder-box .group-box {
  width: 95%;
  padding: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.address-box {
  display: flex;
  align-items:center;
}
.address-box .icon {
  background: #ff9620; /* Old browsers */
  background: -moz-linear-gradient(left, #ff9620 0%, #ff3f00 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, #ff9620 0%,#ff3f00 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, #ff9620 0%,#ff3f00 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff9620', endColorstr='#ff3f00',GradientType=1 ); /* IE6-9 */
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
}
.address-box .icon .iconfont {
  font-size: 48rpx;
  color: #fff;
}
.address-text-box {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.address-text-box .text-title {
  font-size: 32rpx;
}
.address-text-box .text-title text {
  color: #999;
  margin-left: 10rpx;
}
.address-text-box .address-item {
  font-size: 28rpx;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.address-text-box .tip-p {
  color: #ff5000;
  font-size: 28rpx;
}
.address-box .right-icon {
  width: 30rpx;
}
.address-box .right-icon .iconfont {
  color: #999;
  font-size: 40rpx;
}
.order-box .title-view {
 display: flex;
 justify-content: left;
 align-items: center;
 font-size: 32rpx;
 margin-bottom: 10rpx;
}
.order-box .title-view .iconfont {
  font-size: 40rpx;
  margin-right: 15rpx;
  margin-top: -5rpx;
}
.order-box .order-des-item .img {
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  float: left;
}
.order-des-item .des-center {
  margin-left: 180rpx;
}
.order-des-item .des-center .title {overflow: hidden;}
.order-des-item .des-center .title .title-text {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 70%;
  float: left;
}
.order-des-item .des-center .title .right {
  float: right;
  max-width: 28%;
}
.order-des-item .des-center .title .right text {
  font-size: 28rpx;
  display: block;
  text-align: right;
  line-height: 38rpx;
  width: 100%;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
}
.order-des-item .des-center .title .right text.num {color: #999;}

.edit-sku .sku-item {
  font-size: 24rpx;
  background: #fafafa;
  color: #9c9c9c;
  margin-top: 15rpx;
  display: inline-block;
  padding: 0 10rpx;
  border-radius: 8rpx;
}
.order-des-item {
  overflow: hidden;
  margin-top: 10rpx;
}
.grid-box .other-box {
  padding-left: 60rpx;
  margin-top: 30rpx;
}
.grid-box .other-box .other-item {
  padding: 10rpx 0;
  overflow: hidden;
  height: 60rpx;
  box-sizing: border-box;
}
.grid-box .other-box .other-item .text-title {
  font-size: 28rpx;
  float: left;
}
.grid-box .other-box .other-item .txt {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  float: left;
}
.grid-box .other-box .other-item .right {
  font-size: 28rpx;
}
.grid-box .other-box .other-item .right .iconfont {
  display: inline;
  font-size: 30rpx;
  color: #999;
}
.grid-box .other-box .other-item.input-item {
  height: 80rpx;
  line-height: 60rpx;
  display: flex;
}
.grid-box .other-box .other-item.input-item .input {
  margin-left: 20rpx;
  width: 100%;
  flex: 1;
}
.grid-box .other-box .other-item .input input {
  font-size: 28rpx;
  height: 60rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}
.grid-box .other-box .total-price {
  text-align: right;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.grid-box .other-box .total-price .text {
  display: inline-block;
  color: #333;
}
.grid-box .other-box .total-price .text text {
  color: #ff5000;
}
.buy-bottom {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 10;
  box-shadow: 10rpx 0 10rpx #eee;
}
.buy-bottom .btn-form {
  background: #ff9620; /* Old browsers */
  background: -moz-linear-gradient(left, #ff9620 0%, #ff3f00 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, #ff9620 0%,#ff3f00 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, #ff9620 0%,#ff3f00 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff9620', endColorstr='#ff3f00',GradientType=1 ); /* IE6-9 */
  float: right;
  padding: 15rpx 25rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.buy-bottom .hj-box {
  float: right;
  font-size: 28rpx;
  margin-right: 20rpx;
  line-height: 66rpx;
}
.buy-bottom .hj-box .total-num {
  color: #999;
}
.buy-bottom .hj-box .total-price {
  color: #ff5400;
  font-size: 34rpx;
}