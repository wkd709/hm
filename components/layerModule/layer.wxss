/* component/layerModule/layer.wxss */
.layer-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  background: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}
.layer-box .container {
  background: #fff;
  width: 80%;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
}
.layer-box .container .title {
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  padding: 30rpx;
  padding-bottom: 10rpx;
}
.layer-box .container .content {
  color: #999;
  font-size: 32rpx;
  text-align: center;
  line-height: 50rpx;
  padding: 0 30rpx;
}
.layer-box .container .btn-box {
  margin-top: 30rpx;
  overflow: hidden;
  border-top: 1px solid #eee;
}
.layer-box .container .btn {
  width: 50%;
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
  float: left;
  font-size: 34rpx;
  background: #fff;
  box-sizing: border-box;
}
.yes {
  color: #1bb11a;
  border-left: 1px solid #eee;
}